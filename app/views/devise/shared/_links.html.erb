<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <div>
      <%= link_to "Sign in", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-500 font-medium text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <%= link_to "Create account", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-500 font-medium text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-500 font-medium text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "Resend confirmation", new_confirmation_path(resource_name), class: "text-blue-600 hover:text-blue-500 font-medium text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "Resend unlock instructions", new_unlock_path(resource_name), class: "text-blue-600 hover:text-blue-500 font-medium text-sm" %>
    </div>
  <% end %>
</div>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
